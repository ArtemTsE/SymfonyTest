{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        {{ form_start(form) }}

            <div class="form-row">
                <div class="col">

                    {% include 'common/formMessageBlock.html.twig' %}

                    {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Your name...'}}) }}
                    {{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Your phone...'}}) }}
                    {{ form_row(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Your message...'}}) }}
                    {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

                </div>
            </div>

        {{ form_end(form) }}
    </div>

    <div class="hidden" id="phoneNumberTemplate" data-value="{{ phoneNumberTemplate }}"></div>
    <div class="hidden" id="addContactPath" data-value="{{ addContactPath }}"></div>

{% endblock %}
